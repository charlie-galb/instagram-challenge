<% name = current_user.present? ? current_user.email : "stranger" %>
<h1>Welcome, <%= name %></h1>
<% if current_user.present? %>
<a href="/post/new">New post</a>
<% end %>
<ul>
<% @posts.each do |post| %>
   <li> 
   <% if post.image.attached? %>
    <image src="<%=(url_for(post.image))%>"><br>
   <% end %>
   <%= post.caption %>
    </li>
<% end %>
</ul>
